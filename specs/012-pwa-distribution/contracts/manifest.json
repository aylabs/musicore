{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "Musicore - Intelligent Music Stand",
  "short_name": "Musicore",
  "description": "Tablet-native intelligent music stand for practice sessions. Display scores, add annotations, control tempo, and practice with confidence - even offline.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1a1a1a",
  "theme_color": "#6366f1",
  "orientation": "any",
  "scope": "/",
  "categories": [
    "music",
    "education",
    "productivity"
  ],
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-32x32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-16x16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/score-display.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Score display with annotations"
    },
    {
      "src": "/screenshots/practice-mode.png",
      "sizes": "800x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Practice mode with metronome"
    }
  ],
  "shortcuts": [
    {
      "name": "New Score",
      "short_name": "New",
      "description": "Open a new music score",
      "url": "/new-score",
      "icons": [
        {
          "src": "/icons/shortcut-new-score.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Score Library",
      "short_name": "Library",
      "description": "Browse your score library",
      "url": "/library",
      "icons": [
        {
          "src": "/icons/shortcut-library.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Practice Session",
      "short_name": "Practice",
      "description": "Start a practice session",
      "url": "/practice",
      "icons": [
        {
          "src": "/icons/shortcut-practice.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "lang": "en-US",
  "dir": "ltr"
}
